<Page x:Class="DatabaseBackup.Presentation.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DatabaseBackup.Presentation"
      mc:Ignorable="d"
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Page3">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            Height="320"
            VerticalAlignment="Top"
            Width="450">

            <StackPanel Height="40" Orientation="Horizontal" Margin="-32,90,-32,0">
                <Label x:Name="selectDBLabel"
            		Content="File name: "
            		Margin="0,0,0,0"
            		Width="106" FontSize="20" />
                <TextBox x:Name="selectDBTextBox"
            		Width="319"
            		Margin="0,5,0,5"
            		Height="30" />
                <Button x:Name="browserButton" Width="30" Content="..." Margin="30,5,0,5" Click="BrowseButtonClick" />
            </StackPanel>

            <Button x:Name="restoreButton" Content="Restore" FontSize="30.667" Margin="0,87,0,0" Click="RestoreButtonClick" />
        </StackPanel>
    </Grid>
</Page>